<h2>Add a new local Library</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="Your name"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Habit</label>
    <div class="col-sm-10">
      {{input type="text" value=model.address class="form-control" placeholder="A habit you want to acquire"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Frequency</label>
    <div class="col-sm-10">
      {{input type="text" value=model.phone class="form-control" placeholder="How often do you want to do it"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveLibrary' model}}>Add to Habit wish list</button>
    </div>
  </div>
</div>
